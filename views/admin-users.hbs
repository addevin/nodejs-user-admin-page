<div class="container bg-white my-2">
    <h2 class="border-bottom py-3 text-muted">
        Users
    </h2>
    <table id="myTable" class="table table-striped table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th>Sr No.</th>
                <th>User Name</th>
                <th>email</th>
                <th>Loggedin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {{#each users}}
            <tr>
                <td>{{ @index}}</td>
                <td class="text-capitalize">{{this.name}} <small class="small text-muted">{{#if this.admin}}(admin)
                        {{/if}} </small></td>
                <td>{{this.email}}</td>
                <td>{{this.loggedin}}</td>
                <td>
                    <a href="/admin/users/update/{{this._id}}" class="btn btn-dark mx-1">Update</a><a
                        href="/admin/users/update/{{this._id}}?removeUser=true" class="btn btn-danger">Delete</a>
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>


<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
    
</script>